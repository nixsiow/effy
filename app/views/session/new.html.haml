%div
    - if flash[:notice].present?
        %h4= flash[:notice]
        %hr.style-two

    = form_tag '/login' do
        %div.form-group
            = text_field_tag 'name', nil, :autofocus => true, :placeholder => 'username', :class => 'form-control'

        %div.form-group
            = password_field_tag 'password', nil, :class => 'form-control', :placeholder => 'password'

        = submit_tag 'Login', :class => 'btn btn-info'
