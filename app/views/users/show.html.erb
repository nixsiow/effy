<div id="center-block">
    <h2><strong>  <%= @user.name %></strong></h2>
    <hr class="style-two">

        <div class="user_first">
            <%= image_tag @user.image, :class => "user_image grow img-responsive" %>
        </div>
        <div class="user_second">
            <h5 class="lead" style="letter-spacing:1.5px;"><strong style="color:white;"><u>About: </u></strong><br><%= @user.about %></h5>
            <h5 class="lead" style="letter-spacing:1.5px;"><strong style="color:white;"><u>Email: </u></strong><br><%= @user.email %></h5>
            <h5 class="lead" style="letter-spacing:1.5px;"><strong style="color:white;"><u>Location: </u></strong><br><%= @user.location %></h5>
            <%= link_to '   Edit Profile', edit_user_path(@user), :class => "ion-edit btn btn-primary btn-sm grow-rotate" %>
        </div>

        <div id="user_link">
            <div class="center-block">
            <h1 class="outline-inward"><%= link_to('Current Tasks', tasks_categories_path) %></h1>
             &
            <h1 class="outline-inward"><%= link_to('Archives', tasks_archives_path) %></h1>
        </div>
        </div>

</div>
