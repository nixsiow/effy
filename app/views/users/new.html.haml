%div
    - if @user.errors.any?
        %ol
            - @user.errors.full_messages.each do |msg|
                %li= msg
                %hr.style-two

    %section.signup
        = form_for @user do |f|
            %div.form-group
                = f.text_field :name, :autofocus => true, :class => 'form-control', :placeholder => 'username'
            %div.form-group
                = f.url_field :image, :required => true, :class => 'form-control', :placeholder => 'Paste your image url here'
            %div.form-group
                = f.password_field :password, :class => 'form-control', :placeholder => 'password'
            %div.form-group
                = f.password_field :password_confirmation, :class => 'form-control', :placeholder => 're-enter password'

            = f.submit "Register", :class => 'btn btn-success'
