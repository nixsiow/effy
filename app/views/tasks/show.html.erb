<div>
    <div class="wobble-vertical">&lt; <%= @task.description %> &gt;</div><br>
    <div class="wobble-vertical" style="color:#4fa744;">Categorized as <%= @task.category %></div>
    <div class="wobble-vertical" style="color:#ff5c77;">is now <%= @task.completed ? "completed" : "an on going task" %>!</div>

    <hr class="style-two">
    <%= link_to '   Redo it', task_uncompleted_path(@task), :class => "ion-ios7-undo-outline grow" if @task.completed %>
    <br><%= link_to '   Edit', edit_task_path(@task), :class => "ion-edit grow" if @task.completed == false %>
    <br><%= link_to "   I've done it", task_completed_path(@task), :class => "ion-archive grow" if @task.completed == false %>
    <br>
    <h2 class="lead"> <%= @current_user.name %></h2>
</div>
