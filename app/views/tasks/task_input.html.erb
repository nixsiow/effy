<span>almost done.</span>
<div class="progress progress-striped active">
  <div class="progress-bar"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 75%">
    <span class="sr-only">75% Complete</span>
  </div>
</div>

<br>
<div class="center-block" id="task_input">
  <%= form_for @task do |f| %>
    <%= f.hidden_field :category, :value => @category %>
    <%= f.text_field :description, :required => true, :autofocus => true, :placeholder => '                  enter your task             eg: lunch date', :id => 'inputbox' %>
    <br><br>
    <%= f.submit class: 'uibutton'%>
  <% end %>
</div>